@using DataAccess.Entities;
@model Category;

<div class="modal fade" id="addCategoryModal" aria-labelledby="addCategoryTypeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header justify-content-between">
                <h2 class="modal-title" id="addCategoryModalLabel">Kategori Ekle</h2>
                <div>
                    <button type="button" class="close float-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="custom-control-label">Stok Türü</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Ekle</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>